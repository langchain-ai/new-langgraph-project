# Environment Configuration for 5STARS Agent
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# Google AI API Key (for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# LangSmith Monitoring (Optional)
# =============================================================================

# Enable LangSmith tracing
LANGCHAIN_TRACING_V2=true

# LangSmith API Key
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# LangSmith Project Name
LANGCHAIN_PROJECT=5stars

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (Long-Term Memory)
DATABASE_URL=postgresql://user:password@localhost:5432/5stars

# Redis (Short-Term Memory)
REDIS_URL=redis://localhost:6379/0

# Milvus (Vector Memory)
MILVUS_HOST=localhost
MILVUS_PORT=19530

# =============================================================================
# Wildberries API
# =============================================================================

# WB API Base URL
WB_API_URL=https://5stars.roxies.ru/api

# WB API Token
WB_API_TOKEN=your_wb_api_token_here

# =============================================================================
# Telegram Notifications
# =============================================================================

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Default Manager Chat ID
TELEGRAM_MANAGER_CHAT_ID=your_chat_id_here

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum compensation amount (rubles)
MAX_COMPENSATION=1000

# Minimum rating for auto-processing (escalate below this)
MIN_AUTO_RATING=1

# Enable debug mode
DEBUG=false